void swap1(char *&str1,char *&str2)
{
	char *tmp = str1;
	str1 = str2;
	str2 = tmp;
}

void swap2(char **str1,char **str2)
{
	if(!str1||!str2)
	{
		return;
	}	
	char *tmp = *str1;
	*str1 = *str2;
	*str2 = tmp;
}



